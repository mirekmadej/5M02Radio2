<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_5M02Radio2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <HorizontalStackLayout>
                <VerticalStackLayout>
                    <RadioButton
                        Content="Red"
                        CheckedChanged="rbRedChanged"
                        />
                    <RadioButton
                        Content="Green"
                        CheckedChanged="rbGreenChanged"
                        />
                    <RadioButton
                        Content="Blue"
                        CheckedChanged="rbBlueChanged"
                        />
                </VerticalStackLayout>
                <Label
                    Text="napis próbny"
                    FontSize="40"
                    x:Name="lblNapis"
                    />
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
